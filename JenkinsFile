pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/sarapap/TimeCalculator.git'
            }
        }

        stage('Build') {
            steps {
                withEnv(["PATH+MAVEN=/usr/local/opt/maven/bin"]) {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                withEnv(["PATH+MAVEN=/usr/local/opt/maven/bin"]) {
                    sh 'mvn test'
                }
            }
        }

        stage('Code Coverage') {
            steps {
                jacoco execPattern: '**/target/jacoco.exec'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
            jacoco execPattern: '**/target/jacoco.exec'
        }
    }
}
